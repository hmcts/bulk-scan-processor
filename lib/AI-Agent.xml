<?xml version="1.0" encoding="utf-8"?>
<ApplicationInsightsAgent>
    <AgentLogger>INFO</AgentLogger>
    <Instrumentation>
        <BuiltIn enabled="true">
            <HIBERNATE enabled="true"/>
            <HTTP enabled="true"/>
            <JDBC enabled="true"/>
        </BuiltIn>

        <Class name="com.microsoft.azure.servicebus.QueueClient">
            <Method name="send"/>
            <Method name="sendAsync"/>
        </Class>
        <Class name="com.microsoft.azure.storage.blob.CloudBlobClient">
            <Method name="getContainerReference"/>
            <Method name="listContainers" signature="()Ljava/lang/Iterable;"/>
        </Class>
        <Class name="com.microsoft.azure.storage.blob.CloudBlockBlob">
            <Method name="acquireLease"
                    signature="(Ljava/lang/Integer;Ljava/lang/String;)Ljava/lang/String;"/>
            <Method name="deleteIfExists" signature="()boolean;"/>
        </Class>
    </Instrumentation>
</ApplicationInsightsAgent>
